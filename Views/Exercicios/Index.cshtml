@model IEnumerable<FitTrack.Models.Exercicio>

<h1>Exercícios</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Exercício</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Séries</th>
            <th>Repetições</th>
            <th>Carga (kg)</th>
            <th>Treino</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NomeExercicio</td>
                <td>@item.Series</td>
                <td>@item.Repeticoes</td>
                <td>@item.Carga</td>
                <td>@item.Treino?.NomeTreino</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
