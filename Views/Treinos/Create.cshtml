@model FitTrack.Models.Treino

<h2 class="fw-bold mb-4">Novo Treino</h2>

<div class="card p-4 shadow" style="max-width: 500px">
    <form asp-action="Create" method="post">

        <div class="mb-3">
            <label>Nome do Treino</label>
            <input asp-for="NomeTreino" class="form-control" required />
        </div>

        <div class="mb-3">
            <label>Data</label>
            <input asp-for="Data" type="date" class="form-control" required />
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>
