@model FitTrack.Models.Treino

<h2 class="fw-bold mb-3">@Model.NomeTreino</h2>
<p class="text-muted">@Model.Data.ToShortDateString()</p>

<hr />

<h4 class="fw-bold">Exercícios do Treino</h4>

@if (Model.Exercicios == null || !Model.Exercicios.Any())
{
    <p class="text-muted mt-2">Nenhum exercício cadastrado ainda.</p>
}
else
{
    <div class="mt-3">
        @foreach (var ex in Model.Exercicios)
        {
            <div class="item-exercicio d-flex justify-content-between">
                <div>
                    <strong>@ex.NomeExercicio</strong><br />
                    <small class="text-muted">
                        @ex.Series séries • @ex.Repeticoes reps • @ex.Carga kg
                    </small>
                </div>
                <div>
                    <a asp-controller="Exercicios" asp-action="Edit" asp-route-id="@ex.Id" class="btn btn-warning btn-sm">
                        <i class="bi bi-pencil"></i>
                    </a>

                    <a asp-controller="Exercicios" asp-action="Delete" asp-route-id="@ex.Id" class="btn btn-danger btn-sm">
                        <i class="bi bi-trash"></i>
                    </a>
                </div>
            </div>
        }
    </div>
}

<!-- BOTÃO FLUTUANTE -->
<a class="btn-add-exercicio"
   asp-controller="Exercicios"
   asp-action="Create"
   asp-route-treinoId="@Model.Id">
    +
</a>

<a class="btn btn-secondary mt-4" asp-action="Index">Voltar</a>
