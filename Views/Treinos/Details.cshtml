@model FitTrack.Models.Treino

<h2 class="fw-bold mb-3">@Model.NomeTreino</h2>

<p class="text-muted">@Model.Data.ToShortDateString()</p>

<hr />

<h4 class="fw-bold">Exercícios</h4>

@if (Model.Exercicios == null || !Model.Exercicios.Any())
{
    <p class="text-muted">Nenhum exercício cadastrado.</p>
}
else
{
    <ul class="list-group">
        @foreach (var e in Model.Exercicios)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                @e.NomeExercicio
                <span class="badge bg-primary">
                    @e.Series x @e.Repeticoes — @e.Carga kg
                </span>
            </li>
        }
    </ul>
}

<a class="btn btn-secondary mt-3" asp-action="Index">Voltar</a>
