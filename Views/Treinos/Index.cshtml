@model IEnumerable<FitTrack.Models.Treino>

<h2 class="fw-bold mb-4">Meus Treinos</h2>

<a class="btn btn-primary mb-3" asp-action="Create">
    <i class="bi bi-plus-lg"></i> Novo Treino
</a>

<div class="row">

    @foreach (var t in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">

                <div class="card-body">
                    <h4 class="fw-bold mb-1">
                        <i class="bi bi-bicycle"></i> @t.NomeTreino
                    </h4>

                    <p class="text-muted mb-2">@t.Data.ToShortDateString()</p>

                    <p class="mb-1">
                        <strong>Exercícios:</strong>
                        @(t.Exercicios?.Count ?? 0)
                    </p>
                </div>

                <div class="card-footer bg-light d-flex justify-content-between">

                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@t.Id">
                        <i class="bi bi-pencil"></i>
                    </a>

                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@t.Id">
                        <i class="bi bi-info-circle"></i>
                    </a>

                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@t.Id">
                        <i class="bi bi-trash"></i>
                    </a>

                </div>
            </div>
        </div>
    }

</div>
