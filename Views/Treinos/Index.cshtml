@model IEnumerable<FitTrack.Models.Treino>

<h2 class="fw-bold mb-4">Meus Treinos</h2>

<a class="btn btn-primary mb-4" asp-action="Create">
    <i class="bi bi-plus-lg"></i> Novo Treino
</a>

<div class="row">

    @foreach (var treino in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card-treino"
                 onclick="location.href='@Url.Action("Details", "Treinos", new { id = treino.Id })'">

                <div class="card-treino-header">
                    <h4 class="mb-0 fw-bold">
                        <i class="bi bi-bicycle"></i> @treino.NomeTreino
                    </h4>
                    <small>@treino.Data.ToShortDateString()</small>
                </div>

                <div class="p-3">
                    <p class="m-0 text-muted">
                        <i class="bi bi-list-check"></i>
                        @((treino.Exercicios?.Count ?? 0)) exercícios
                    </p>
                </div>

            </div>
        </div>
    }

</div>
