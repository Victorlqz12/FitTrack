@using System.Globalization
@using System.Text.Json
@{
    ViewData["Title"] = "Dashboard";

    // --- Lógica para os cards de resumo de peso ---
    var diferenca = (double)ViewBag.DiferencaPeso;
    string corDiferenca = "text-body-secondary";
    string iconeDiferenca = "bi-dash-lg";

    if (diferenca > 0)
    {
        corDiferenca = "text-danger";
        iconeDiferenca = "bi-arrow-up";
    }
    else if (diferenca < 0)
    {
        corDiferenca = "text-success";
        iconeDiferenca = "bi-arrow-down";
    }

    string diferencaFormatada = diferenca.ToString("+#,##0.0;-#,##0.0;0.0", new CultureInfo("pt-BR"));
}

<h1 class="mb-4">Dashboard</h1>

<div class="row g-4 mb-4">

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-person-check-fill display-4 text-primary me-4"></i>
                <div>
                    <div class="text-body-secondary mb-1">Peso Atual</div>
                    <h2 class="fw-bold mb-0">@ViewBag.PesoAtual kg</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi @iconeDiferenca display-4 @corDiferenca me-4"></i>
                <div>
                    <div class="text-body-secondary mb-1">Balanço Total</div>
                    <h2 class="fw-bold mb-0 @corDiferenca">@diferencaFormatada kg</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm h-100">
            <div class="card-body d-flex align-items-center">
                <i class="bi bi-bicycle display-4 text-info me-4"></i>
                <div>
                    <div class="text-body-secondary mb-1">Total de Treinos</div>
                    <h2 class="fw-bold mb-0">@ViewBag.TotalTreinos</h2>
                </div>
            </div>
        </div>
    </div>

</div>
<div class="row">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-treino-header">
                <h5 class="mb-0 fw-bold"><i class="bi bi-graph-up-arrow me-2"></i>Evolução do Peso (kg)</h5>
            </div>
            <div class="card-body" style="min-height: 400px; position: relative;">

                @if (ViewBag.Pesos != null && ViewBag.Pesos.Count > 1)
                {
                    <canvas id="graficoEvolucao"></canvas>
                }
                else
                {
                    <div class="d-flex flex-column align-items-center justify-content-center text-center h-100 p-4"
                         style="position: absolute; top:0; left:0; right:0; bottom:0;">
                        <i class="bi bi-bar-chart-line display-1 text-body-tertiary"></i>
                        <h4 class="mt-3">Sem dados suficientes para o gráfico</h4>
                        <p class="text-muted">
                            Você precisa de pelo menos <strong>dois registros de peso</strong> na aba "Evolução Física" para ver seu progresso.
                        </p>
                        <a asp-controller="Evolucoes" asp-action="Create" class="btn btn-primary mt-2">
                            <i class="bi bi-plus-lg"></i> Adicionar primeiro registro
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @if (ViewBag.Pesos != null && ViewBag.Pesos.Count > 1)
    {
        <script>
            // Garante que o script rode após o DOM estar pronto
            document.addEventListener("DOMContentLoaded", function () {

                // Pega o elemento <canvas>
                const ctx = document.getElementById('graficoEvolucao').getContext('2d');

                

                const datas = @Html.Raw(JsonSerializer.Serialize(ViewBag.Datas));
                const pesos = @Html.Raw(JsonSerializer.Serialize(ViewBag.Pesos));

                // Cria o gráfico
                const meuGrafico = new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: datas,
                        datasets: [{
                            label: 'Peso (kg)',
                            data: pesos,

                            // Estilo do gráfico
                            borderColor: '#0d6efd',
                            backgroundColor: 'rgba(13, 110, 253, 0.1)',
                            fill: true,
                            tension: 0.1,
                            pointRadius: 4,
                            pointBackgroundColor: '#0d6efd',
                        }]
                    },
                    options: {
                        responsive: true,
                        maintainAspectRatio: false,
                        scales: {
                            y: {
                                beginAtZero: false
                            }
                        },
                        plugins: {
                            legend: {
                                display: false
                            }
                        }
                    }
                });
            });
        </script>
    }
}