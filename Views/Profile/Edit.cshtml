@model FitTrack.Models.Profile

@{
    ViewData["Title"] = "Editar Perfil";
}

<div classs="row d-flex justify-content-center">
    <div class="col-lg-8 col-xl-6">

        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0 fw-bold">@ViewData["Title"]</h4>
            </div>

            <form method="post">
                <div class="card-body">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                    <input type="hidden" asp-for="Id" />
                    <input type="hidden" asp-for="UserId" />

                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">
                            <i class="bi bi-person-fill me-1"></i> Nome Completo
                        </label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="DataNascimento" class="form-label">
                                <i class="bi bi-calendar-event me-1"></i> Data de Nascimento
                            </label>
                            <input asp-for="DataNascimento" type="date" class="form-control" />
                            <span asp-validation-for="DataNascimento" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Sexo" class="form-label">
                                <i class="bi bi-gender-ambiguous me-1"></i> Sexo
                            </label>
                            <select asp-for="Sexo" class="form-select">
                                <option value="">Selecione...</option>
                                <option>Masculino</option>
                                <option>Feminino</option>
                                <option>Outro</option>
                            </select>
                            <span asp-validation-for="Sexo" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Altura" class="form-label">
                                <i class="bi bi-rulers me-1"></i> Altura (cm)
                            </label>
                            <input asp-for="Altura" type="number" class="form-control" placeholder="Ex: 175" />
                            <span asp-validation-for="Altura" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="PesoInicial" class="form-label">
                                <i class="bi bi-person-badge me-1"></i> Peso Inicial (kg)
                            </label>
                            <input asp-for="PesoInicial" type="number" step="0.1" class="form-control" placeholder="Ex: 80.5" />
                            <span asp-validation-for="PesoInicial" class="text-danger small"></span>
                        </div>
                    </div>

                </div>

                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-x-circle me-1"></i> Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-lg me-1"></i> Salvar Alterações
                    </button>
                </div>
            </form>
        </div>

    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}