@model FitTrack.Models.Profile

<h2 class="fw-bold mb-4">Editar Perfil</h2>

<div class="card shadow p-4" style="max-width: 600px;">
    <form method="post">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="UserId" />
        


        <div class="mb-3">
            <label class="form-label">Nome completo</label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Data de nascimento</label>
            <input asp-for="DataNascimento" type="date" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Altura (cm)</label>
            <input asp-for="Altura" type="number" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Peso inicial (kg)</label>
            <input asp-for="PesoInicial" type="number" step="0.1" class="form-control" />
        </div>

        <div class="mb-3">
            <label class="form-label">Sexo</label>
            <select asp-for="Sexo" class="form-control">
                <option value="">Selecione...</option>
                <option>Masculino</option>
                <option>Feminino</option>
                <option>Outro</option>
            </select>
        </div>

        <button class="btn btn-primary">Salvar</button>
        <a asp-action="Index" class="btn btn-secondary ms-2">Cancelar</a>

    </form>
</div>
