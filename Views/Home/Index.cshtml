@{
    ViewData["Title"] = "FitTrack - Dashboard";
}

<div class="container mt-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">FitTrack</h1>
        <p class="lead">Gerencie seus treinos, exercícios e acompanhe sua evolução física.</p>
    </div>

    <div class="row g-4">

        <!-- Card Cadastro de Usuários -->
        <div class="col-md-3">
            <div class="card shadow border-0 text-center p-3">
                <div class="card-body">
                    <h4 class="card-title">Usuários</h4>
                    <p class="card-text">Gerencie os usuários do sistema.</p>
                    <a asp-controller="Usuarios" asp-action="Index" class="btn btn-primary w-100">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Card Treinos -->
        <div class="col-md-3">
            <div class="card shadow border-0 text-center p-3">
                <div class="card-body">
                    <h4 class="card-title">Treinos</h4>
                    <p class="card-text">Cadastre e consulte treinos.</p>
                    <a asp-controller="Treinos" asp-action="Index" class="btn btn-success w-100">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Card Exercícios -->
        <div class="col-md-3">
            <div class="card shadow border-0 text-center p-3">
                <div class="card-body">
                    <h4 class="card-title">Exercícios</h4>
                    <p class="card-text">Gerencie exercícios de cada treino.</p>
                    <a asp-controller="Exercicios" asp-action="Index" class="btn btn-warning w-100">Acessar</a>
                </div>
            </div>
        </div>

        <!-- Card Evolução Física -->
        <div class="col-md-3">
            <div class="card shadow border-0 text-center p-3">
                <div class="card-body">
                    <h4 class="card-title">Evolução Física</h4>
                    <p class="card-text">Acompanhe o progresso do usuário.</p>
                    <a asp-controller="Evolucoes" asp-action="Index" class="btn btn-info w-100">Acessar</a>
                </div>
            </div>
        </div>

    </div>
</div>
