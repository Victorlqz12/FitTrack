@model FitTrack.Models.RegisterViewModel

@{
    ViewData["Title"] = "Criar Conta";
    Layout = "_AuthLayout";
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 400px;">

        <div class="text-center mb-4">
            <div class="p-3 bg-success bg-opacity-25 rounded-circle d-inline-block">
                <i class="bi bi-person-plus-fill" style="font-size: 48px;"></i>
            </div>
            <h3 class="mt-3 fw-bold">Criar Conta</h3>
            <p class="text-muted">Comece a acompanhar sua evolução hoje mesmo!</p>
        </div>

        <form asp-action="Register" method="post">

            <div class="form-group mb-3">
                <label class="fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="seuemail@gmail.com" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-semibold">Senha</label>
                <div class="input-group">
                    <input asp-for="Password" type="password" class="form-control" id="senhaInput" placeholder="Crie uma senha" />
                    <span class="input-group-text" id="mostrarSenha" style="cursor: pointer;">
                        <i class="bi bi-eye-fill"></i>
                    </span>
                </div>
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <button type="submit" class="btn btn-success w-100 mt-2">Registrar</button>

            <div class="text-center mt-3">
                <a asp-action="Login" class="text-decoration-none">
                    Já tenho uma conta
                </a>
            </div>

        </form>


@section Scripts {
                <script>
                    const btnMostrar = document.getElementById("mostrarSenha");
                    const senhaInput = document.getElementById("senhaInput");

                    btnMostrar.addEventListener("click", () => {
                        if (senhaInput.type === "password") {
                            senhaInput.type = "text";
                            btnMostrar.innerHTML = '<i class="bi bi-eye-slash-fill"></i>';
                        } else {
                            senhaInput.type = "password";
                            btnMostrar.innerHTML = '<i class="bi bi-eye-fill"></i>';
                        }
                    });
                </script>
}

