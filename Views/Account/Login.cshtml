@model FitTrack.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "_AuthLayout"; 
}

<div class="d-flex justify-content-center align-items-center" style="min-height: 80vh;">
    <div class="card shadow-lg border-0 p-4" style="width: 380px;">

        <div class="text-center mb-4">
            <div class="p-3 bg-primary bg-opacity-25 rounded-circle d-inline-block">
                <i class="bi bi-person-circle" style="font-size: 48px;"></i>
            </div>
            <h3 class="mt-3 fw-bold">Entrar no FitTrack</h3>
            <p class="text-muted">Gerencie seus treinos e evolução</p>
        </div>

        <form asp-action="Login" method="post">

            <div class="form-group mb-3">
                <label class="fw-semibold">Email</label>
                <input asp-for="Email" class="form-control" placeholder="seuemail@gmail.com" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>

            <div class="form-group mb-3">
                <label class="fw-semibold">Senha</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Digite sua senha" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 mt-2">Entrar</button>

            <div class="text-center mt-3">
                <a asp-action="Register" class="text-decoration-none">
                    Criar nova conta
                </a>
            </div>

        </form>

    </div>
</div>
