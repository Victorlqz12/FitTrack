@model FitTrack.Models.Evolucao

@{
    ViewData["Title"] = "Confirmar Exclusão";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm border-danger">
            <div class="card-header bg-danger text-white">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <h5 class="mb-3">Tem certeza que deseja deletar este registro?</h5>

                <div class="alert alert-danger">
                    <dl class="row mb-0">
                        <dt class="col-sm-4">Data:</dt>
                        <dd class="col-sm-8">@Model.DataRegistro.ToShortDateString()</dd>

                        <dt class="col-sm-4">Peso:</dt>
                        <dd class="col-sm-8">@Model.Peso kg</dd>
                    </dl>
                </div>

                <p class="text-danger fw-bold">Esta ação não pode ser desfeita.</p>

                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash-fill"></i> Deletar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>