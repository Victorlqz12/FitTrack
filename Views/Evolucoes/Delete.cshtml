@model FitTrack.Models.Evolucao

<h1>Excluir Evolução</h1>

<h3>Tem certeza que deseja excluir este registro?</h3>

<p><strong>Data:</strong> @Model.DataRegistro.ToShortDateString()</p>
<p><strong>Peso:</strong> @Model.Peso kg</p>
<p><strong>Usuário:</strong> @Model.Usuario?.Nome</p>

<form asp-action="Delete">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
