@model FitTrack.Models.Evolucao

<h1>Excluir Evolução</h1>

<h3>Tem certeza que deseja excluir este registro?</h3>

<div class="mt-4">
    <p><strong>Data:</strong> @Model.DataRegistro.ToShortDateString()</p>
    <p><strong>Peso:</strong> @Model.Peso kg</p>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    <input type="hidden" asp-for="Id" />

    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>
