@model FitTrack.Models.Evolucao

@{
    ViewData["Title"] = "Editar Registro de Evolução";
}

<div class="row d-flex justify-content-center">
    <div class="col-md-6">
        <div class="card shadow-sm">
            <div class="card-header">
                <h4 class="mb-0">@ViewData["Title"]</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">

                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="DataRegistro" class="form-label">Data do Registro</label>
                        <input asp-for="DataRegistro" class="form-control" type="date" />
                        <span asp-validation-for="DataRegistro" class="text-danger small"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Peso" class="form-label">Peso (kg)</label>
                        <input asp-for="Peso" class="form-control" type="number" step="0.1" placeholder="Ex: 80,5" />
                        <span asp-validation-for="Peso" class="text-danger small"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancelar
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg"></i> Salvar Alterações
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}