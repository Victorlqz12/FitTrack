@model IEnumerable<FitTrack.Models.Evolucao>

@{
    ViewData["Title"] = "Minha Evolução Física";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="mb-0">@ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary btn-lg">
        <i class="bi bi-plus-lg"></i> Adicionar Novo Registro
    </a>
</div>

<hr />

<h3 class="mb-3">Histórico de Registros</h3>

<div class="card shadow-sm">
    <div class="card-body">
        <table class="table table-hover mb-0">
            <thead>
                <tr>
                    <th scope="col">Data do Registro</th>
                    <th scope="col">Peso (kg)</th>
                    <th scope="col" class="text-end">Ações</th>
                </tr>
            </thead>
            <tbody>
                @if (!Model.Any())
                {
                    <tr>
                        <td colspan="3" class="text-center py-4">
                            <h5 class="mb-1">Nenhum registro encontrado.</h5>
                            <p class="mb-0 text-muted">Comece clicando em "Adicionar Novo Registro".</p>
                        </td>
                    </tr>
                }

                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.DataRegistro.ToShortDateString()</strong></td>
                        <td>@item.Peso kg</td>
                        <td class="text-end">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                <i class="bi bi-pencil-fill"></i> Editar
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash-fill"></i> Deletar
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>