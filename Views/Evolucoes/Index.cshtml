@model IEnumerable<FitTrack.Models.Evolucao>

<h1>Evolução Física</h1>

<canvas id="graficoEvolucao" height="100"></canvas>

<hr />

<p>
    <a class="btn btn-primary" asp-action="Create">Registrar Evolução</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Data</th>
            <th>Peso (kg)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DataRegistro.ToShortDateString()</td>
                <td>@item.Peso</td>
                <td>
                    <a class="btn btn-warning btn-sm" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>

        const datas = @Html.Raw(Json.Serialize(Model.Select(e => e.DataRegistro.ToShortDateString())));
        const pesos = @Html.Raw(Json.Serialize(Model.Select(e => e.Peso)));

        const ctx = document.getElementById('graficoEvolucao').getContext('2d');

        new Chart(ctx, {
            type: 'line',
            data: {
                labels: datas,
                datasets: [{
                    label: 'Peso (kg)',
                    data: pesos,
                    borderWidth: 3,
                    borderColor: '#0d6efd',
                    backgroundColor: 'rgba(13, 110, 253, 0.2)',
                    tension: 0.3
                }]
            },
            options: {
                scales: {
                    y: { beginAtZero: false }
                }
            }
        });

    </script>
}
