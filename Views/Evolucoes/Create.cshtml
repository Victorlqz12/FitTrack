@model FitTrack.Models.Evolucao

<h1>Registrar Evolução</h1>

<form asp-action="Create" method="post">

    <div class="form-group mb-3">
        <label>Data</label>
        <input asp-for="DataRegistro" type="date" class="form-control" />
        <span asp-validation-for="DataRegistro" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label>Peso (kg)</label>
        <input asp-for="Peso" type="number" step="0.1" class="form-control" />
        <span asp-validation-for="Peso" class="text-danger"></span>
    </div>

    <button class="btn btn-success" type="submit">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>

</form>
